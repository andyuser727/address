<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
    <g:HTMLPanel>
        <g:SimplePanel ui:field="contentWrapperPanel">
            <g:FlowPanel ui:field="searchPanel">
                <g:FlowPanel addStyleNames='paddingButtonPanel'>
                    <g:FlowPanel addStyleNames='paddingButton floatLeft'>
                        <g:Button ui:field='btnAdd' text='Add Contact'></g:Button>
                    </g:FlowPanel>
                    <g:FlowPanel addStyleNames='paddingButton floatLeft'>
                        <g:Button ui:field='btnSearch' text='Search'></g:Button>
                    </g:FlowPanel>
                    <g:FlowPanel addStyleNames='paddingButton'>
                        <g:Button ui:field='btnShowAll' text='Show All'></g:Button>
                    </g:FlowPanel>
                </g:FlowPanel>
                <g:FlowPanel addStyleNames='paddingTable'>
                    <g:FlowPanel>
                        <g:Label width="100px" addStyleNames='newLine floatLeft' text="First Name"/>
                        <g:TextBox ui:field="forename"/>
                    </g:FlowPanel>
                    <g:FlowPanel>
                        <g:Label width="100px" addStyleNames='newLine floatLeft' text="SurName"/>
                        <g:TextBox ui:field="surname"/>
                    </g:FlowPanel>
                    <g:FlowPanel>
                        <g:Label width="100px" addStyleNames='newLine floatLeft' text="Street"/>
                        <g:TextBox ui:field="street"/>
                    </g:FlowPanel>
                    <g:FlowPanel>
                        <g:Label width="100px" addStyleNames='newLine floatLeft' text="City"/>
                        <g:TextBox ui:field="city"/>
                    </g:FlowPanel>
                    <g:FlowPanel>
                        <g:Label width="100px" addStyleNames='newLine floatLeft' text="County"/>
                        <g:TextBox ui:field="county"/>
                    </g:FlowPanel>
                    <g:FlowPanel>
                        <g:Label width="100px" addStyleNames='newLine floatLeft' text="Country"/>
                        <g:TextBox ui:field="country"/>
                    </g:FlowPanel>
                    <g:FlowPanel>
                        <g:Label width="100px" addStyleNames='newLine floatLeft' text="Post Code"/>
                        <g:TextBox ui:field="postalCode"/>
                    </g:FlowPanel>
                </g:FlowPanel>
                <g:FlowPanel ui:field='tablePanel'>
                    <c:SimplePager ui:field='pager' location='CENTER'/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:SimplePanel>
    </g:HTMLPanel>
</ui:UiBinder>
